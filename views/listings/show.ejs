<% layout("layouts/boilerplate") %>

<body>
  <div class="row mt-3">
    <div class="col col-8 offset-2">
      <h1><%=listing.title%></h1>
    </div>
    <div class="col col-8 offset-2">
      <div class="card">
        <img
          src="<%=listing.image.url%>"
          class="card-img-top"
          alt="image not found"
        />
        <div class="card-body">
          <ul>
            <li><%=listing.description%></li>
            <li>&#8377;<%=listing.price%></li>
            <li><%=listing.location%></li>
            <li><%=listing.country%></li>
          </ul>
          <div class="row">
            <div class="col-auto">
              <a href="/listings/<%=listing._id%>/edit"
                ><button class="btn btn-danger">Edit</button></a
              >
            </div>

            <div class="col-auto">
              <form
                action="/listings/<%= listing._id %>?_method=DELETE"
                method="POST"
              >
                <button class="btn btn-danger">Delete this listing</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <hr />
  <div class="row">
    <div class="col-8 offset-2">
      <h1>leave a review</h1>
      <form method="post" action="/listings/<%=listing._id%>/review">
        <div>
          <label for="rating"> Give rating</label>
          <input
            type="range"
            id="rating"
            min="0"
            max="5"
            name="review[rating]"
          />
        </div>
        <br />
        <div>
          <label for="comment">Enter comment</label><br />
          <textarea
            id="comment"
            rows="5"
            cols="30"
            class="form-control"
            name="review[comment]"
          ></textarea>
        </div>
        <button class="btn btn-outline-dark mt-2 mb-2" type="submit">
          Submit
        </button>
      </form>
    </div>
  </div>
</body>
