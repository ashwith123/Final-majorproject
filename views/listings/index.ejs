<% layout("layouts/boilerplate") %>

  <body>
    <h1>BOOKmyhotel</h1>
    <div class="row row-cols-xxl-3 row-cols-lg-3 row-cols-md-3 row-cols-sm-2 row-cols-1">
      <% for (let listing of allListings) { %>
        <div class="col mb-4">
          <a href="/listings/<%= listing._id %>">
            <div class="card" style="width: 18rem;">
              <img src="<%= listing.image %>" class="card-img-top" alt="<%= listing.title %> image not found" />
              <div class="card-body">
                <p class="card-text">
                  <b>
                    <%= listing.title %>
                  </b><br />
                  &#8377;<%= listing.price %> /night
                </p>
              </div>
            </div>
          </a>
        </div>
        <% } %>
    </div>
  </body>